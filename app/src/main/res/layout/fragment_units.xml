<?xml version="1.0" encoding="utf-8"?>
<!--//where it comes together, what usually comes in the units activity_main goes here-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:id="@+id/mainRelative"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="324dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/length_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/area_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/weight_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/temp_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temper-ature" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/volume_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>