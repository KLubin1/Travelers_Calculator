<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/bold_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SunKissedTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#F83A2C</item>
        <item name="colorPrimaryDark">#E68B6E</item>
        <item name="colorAccent">#E13802</item>
    </style>

    <style name="PinaColadaTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryDark">#955B06</item>
        <item name="colorAccent">#8FF11E</item>
    </style>

    <style name="HerbivoreTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#024C05</item>
        <item name="colorAccent">#B2C307</item>
    </style>


    <style name="NoirTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryDark">@color/light</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="DarkModeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/highlight_gray</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_secondary</item>
    </style>


</resources>
